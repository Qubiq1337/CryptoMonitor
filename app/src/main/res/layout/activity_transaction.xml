<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundChartColor"
    tools:context=".activity.TransactionActivity">

    <TextView

        android:id="@+id/transaction_currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="Coin"
        android:textColor="@color/textColorDark"
        android:textSize="@dimen/transaction_text_size" />

    <AutoCompleteTextView
        android:id="@+id/transaction_actv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/transaction_currency"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:completionThreshold="1"
        android:dropDownWidth="300dp"
        android:hint="Name"
        android:inputType="textAutoComplete"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:textColor="@color/textColorPrimary"
        android:textColorHint="@color/textColorDark"
        android:textSize="22sp" />

    <TableLayout
        android:id="@+id/transaction_tabel_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/transaction_actv"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="15dp"
        android:stretchColumns="0,1">

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price in USD"
                android:textColor="@color/textColorDark"
                android:textSize="@dimen/transaction_text_size" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount"
                android:textColor="@color/textColorDark"
                android:textSize="@dimen/transaction_text_size" />
        </TableRow>

        <TableRow>

            <EditText
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:textColor="@color/textColorPrimary"
                android:textSize="26sp"
                tools:text="$ 4656,34" />

            <EditText
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:textColor="@color/textColorPrimary"
                android:textSize="26sp"
                tools:text="10" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:id="@+id/transaction_linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/transaction_tabel_layout"
        android:layout_marginTop="30dp"
        android:background="@color/backgroundColor"
        android:orientation="vertical"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Total Cost"
            android:textColor="@color/textColorDark"
            android:textSize="@dimen/transaction_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:text="$ 45000000000,56"
            android:textSize="45sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/transaction_linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/transaction_linear1"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textColor="@color/textColorDark"
            android:textSize="@dimen/transaction_text_size" />


        <TextView
            android:id="@+id/transaction_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="15dp"
            android:hint="Check Date"
            android:textColor="@color/textColorPrimary"
            android:textColorHint="@color/textColorDark"
            android:textSize="20sp" />
        
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/transaction_linear2"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deduct from USD Holdings"
            android:textColor="@color/textColorPrimary"
            android:textSize="20sp" />

        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:switchMinWidth="70dp"
            tools:checked="true" />

    </LinearLayout>

</RelativeLayout>