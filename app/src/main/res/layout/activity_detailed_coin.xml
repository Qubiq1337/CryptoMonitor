<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DetailedCoin">

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/backgroundColor"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/detailed_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:src="@drawable/arrow_left_29172"
            android:tint="#ffffff" />

        <TextView
            android:id="@+id/detailed_fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            tools:text="Bitcoin"
            android:textColor="#ffffff"
            android:textSize="26sp"
            android:textStyle="bold" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="365dp"
        android:layout_below="@+id/linear1"
        android:background="@color/backgroundColor"
        >

        <ImageView
            android:id="@+id/detailed_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="30dp"
            />

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/detailed_icon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/detailed_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="$5 174,01"
                android:textColor="#ffffff"
                android:textSize="36sp"
                android:textStyle="bold" />

            <TextView
                android:layout_marginLeft="7dp"
                android:id="@+id/detailed_change"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                tools:text="- 1 310,36 (20,21%)"
                android:textColor="@color/redColor" />
        </LinearLayout>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp">

            <TableRow>

                <TextView
                    android:textSize="@dimen/table_text_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="MKT"
                    android:textColor="@color/textColorDark"
                    />

                <TextView
                    android:id="@+id/detailed_mkt"
                    android:textSize="@dimen/table_text_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    tools:text="89,94B"
                    android:textColor="#ffffff"
                    />

                <TextView
                    android:textSize="@dimen/table_text_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="RANK"
                    android:textColor="@color/textColorDark"
                    />

                <TextView
                    android:id="@+id/detailed_RANK"
                    android:textSize="@dimen/table_text_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    tools:text="#1"
                    android:textColor="#ffffff"
                    />
            </TableRow>

            <TableRow>

                <TextView
                    android:textSize="@dimen/table_text_size"
                    android:layout_marginTop="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SUPPLY"
                    android:textColor="@color/textColorDark"
                    />

                <TextView
                    android:id="@+id/detailed_SPLY"
                    android:textSize="@dimen/table_text_size"
                    android:layout_marginTop="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    tools:text="17,38M"
                    android:textColor="#ffffff"
                    />

                <TextView
                    android:textSize="@dimen/table_text_size"
                    android:layout_marginTop="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="HIGH"
                    android:textColor="@color/textColorDark"
                    />

                <TextView
                    android:id="@+id/detailed_high"
                    android:textSize="@dimen/table_text_size"
                    android:layout_marginTop="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    tools:text="5 555,10"
                    android:textColor="#ffffff" />
            </TableRow>
            <TableRow>

                <TextView
                    android:textSize="@dimen/table_text_size"
                    android:layout_marginTop="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="VOL"
                    android:textColor="@color/textColorDark"
                    />

                <TextView
                    android:id="@+id/detailed_volume"
                    android:textSize="@dimen/table_text_size"
                    android:layout_marginTop="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    tools:text="21M"
                    android:textColor="#ffffff" />

                <TextView
                    android:textSize="@dimen/table_text_size"
                    android:layout_marginTop="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="LOW"
                    android:textColor="@color/textColorDark"
                    />

                <TextView
                    android:id="@+id/detailed_low"
                    android:textSize="@dimen/table_text_size"
                    android:layout_marginTop="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    tools:text="5145,9"
                    android:textColor="#ffffff" />
            </TableRow>
            <TableRow>

                <TextView
                    android:textSize="@dimen/table_text_size"
                    android:layout_marginTop="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TOTAL VOL"
                    android:textColor="@color/textColorDark"
                    />

                <TextView
                    android:id="@+id/detailed_total_volume"
                    android:textSize="@dimen/table_text_size"
                    android:layout_marginTop="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    tools:text="5,552B"
                    android:textColor="#ffffff" />

                <TextView
                    android:textSize="@dimen/table_text_size"

                    android:layout_marginTop="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="WEB"
                    android:textColor="@color/textColorDark"
                    />

                <ImageView
                    android:id="@+id/detailed_infoURL"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="@dimen/table_text_size"
                    android:layout_height="@dimen/table_text_size"
                    android:src="@drawable/arrow_left_29172"
                    android:tint="@color/textColorPrimary"
                    android:rotation="180"
                    />
            </TableRow>
        </TableLayout>
    </RelativeLayout>
    <LinearLayout
        android:background="@color/backgroundChartColor"
        android:id="@+id/linear3"
        android:layout_below="@id/relative"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="1D"
            android:gravity="center"
            android:textColor="@color/textColorPrimary"
            android:background="@drawable/rounded_text_view"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="1W"
            android:gravity="center"
            android:textColor="@color/textColorPrimary"
            android:background="@drawable/rounded_text_view"
            android:textSize="20sp"
            android:layout_marginStart="10dp" />
        <TextView
            android:layout_marginStart="10dp"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="1M"
            android:gravity="center"
            android:textColor="@color/textColorPrimary"
            android:background="@drawable/rounded_text_view_selected"
            android:textSize="20sp"
            />
        <TextView
            android:layout_marginStart="10dp"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="3M"
            android:gravity="center"
            android:textColor="@color/textColorPrimary"
            android:background="@drawable/rounded_text_view"
            android:textSize="20sp"
            />

    </LinearLayout>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart"
        android:background="@color/backgroundChartColor"
        android:layout_below="@id/linear3"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        />
    <View
        android:layout_below="@id/chart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundChartColor">
    </View>

</RelativeLayout>