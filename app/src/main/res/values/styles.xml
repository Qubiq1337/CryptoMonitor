<resources>

    <style name="AppThemeDarkPurple" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/darkPurple3</item>
        <item name="colorPrimaryDark">@color/darkPurple2</item>
        <item name="colorAccent">@color/blue_color_selected</item>
        <item name="android:windowBackground">@color/darkPurple1</item>
        <item name="customBgColor">@color/dark1</item>
        <item name="android:textColor">@color/white</item>
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/dark3</item>
        <item name="colorPrimaryDark">@color/dark2</item>
        <item name="colorAccent">@color/blue_color_selected</item>
        <item name="android:windowBackground">@color/dark1</item>
        <item name="customBgColor">@color/dark1</item>
        <item name="android:textColor">@color/white</item>
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
    </style>

    <style name="SettingsTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/dark3</item>
        <item name="colorPrimaryDark">@color/dark2</item>
        <item name="colorAccent">@color/blue_color_selected</item>

    </style>

    <style name="DetailedActivityTheme" parent="Theme.Design.NoActionBar" />

    <style name="BriefcaseFragmentTheme" parent="Theme.Design.NoActionBar" />

    <style name="HistoryFragmentTheme" parent="Theme.Design.NoActionBar" />


    <style name="TextViewStyle" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="TextViewAttributes" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="DarkEditTextStyle" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColorHint">@color/textColorPrimary</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="MyCardViewStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="cardCornerRadius">5dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPaddingBottom">10dp</item>
        <item name="contentPaddingTop">10dp</item>
        <item name="contentPaddingLeft">10dp</item>
        <item name="contentPaddingRight">10dp</item>
        <item name="customBgColor">@color/dark1</item>
        <item name="cardBackgroundColor">@color/dark3</item>
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem" />

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem" />


</resources>
