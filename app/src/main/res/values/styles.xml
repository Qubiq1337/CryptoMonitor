<resources>

    <style name="AppThemeLight" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorLigthPrimary</item>
        <item name="colorPrimaryDark">@color/colorLigthPrimaryDark</item>
        <item name="colorAccent">@color/colorLigthAccent</item>
        <item name="android:windowBackground">@color/white</item>"
        <item name="android:textColor">@color/black</item>
        <item name="itemIconTint">@color/black</item>
        <item name="itemTextColor">@color/black</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">@color/colorDarkPrimary</item>
        <item name="colorPrimaryDark">@color/colorDarkPrimary</item>
        <item name="colorAccent">@color/colorDarkAccent</item>
        <item name="android:windowBackground">@color/dark1</item>
        <item name="android:textColor">@color/white</item>
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
    </style>


    <style name="DetailedActivityTheme" parent="Theme.Design.NoActionBar"></style>

    <style name="BriefcaseFragmentTheme" parent="Theme.Design.NoActionBar"></style>

    <style name="HistoryFragmentTheme" parent="Theme.Design.NoActionBar"></style>


    <style name="TextViewStyle" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="TextViewAttributes" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="DarkEditTextStyle" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColorHint">@color/textColorPrimary</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="MyCardViewStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="cardCornerRadius">5dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPaddingBottom">10dp</item>
        <item name="contentPaddingTop">10dp</item>
        <item name="contentPaddingLeft">10dp</item>
        <item name="contentPaddingRight">10dp</item>
        <item name="cardBackgroundColor">@color/backgroundColor</item>
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem"></style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem"></style>


</resources>
