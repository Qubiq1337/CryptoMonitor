<resources>

    <style name="AppThemeDark" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/DarkPrimary</item>
        <item name="colorPrimaryDark">@color/DarkPrimary</item>
        <item name="colorAccent">@color/green1_dark_theme</item>

        <!--this change the background of main window (activity and) AND all the components (dialogs) -->
        <item name="android:colorBackground">@color/DarkBackground</item>

        <item name="android:actionMenuTextColor">@color/text_white</item>

        <item name="custom_background_color">@color/DarkBackground</item>
        <item name="custom_text_color">@color/text_white</item>
        <item name="custom_text_unfocused_color">@color/grey</item>
        <item name="custom_icon_color">@color/text_white</item>
        <item name="custom_background_tint">@color/DarkPrimary</item>

        <item name="android:textColor">@color/white</item>
        <item name="itemIconTint">@color/white</item>
        <item name="android:itemBackground">@color/dark1</item>
        <item name="itemTextColor">@color/white</item>
        <item name="android:listViewStyle">@style/listViewPrefs</item>
    </style>

    <style name="AppThemeDarkPurple" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorDarkPrimaryPurple</item>
        <item name="colorPrimaryDark">@color/colorDarkPrimaryDarkPurple</item>
        <item name="colorAccent">@color/colorDarkAccentPurple</item>

        <!--this change the background of main window (activity and) AND all the components (dialogs) -->
        <item name="android:colorBackground">@color/DarkBackground</item>

        <item name="android:actionMenuTextColor">@color/text_white</item>

        <item name="custom_background_color">@color/DarkBackground</item>
        <item name="custom_text_color">@color/text_white</item>
        <item name="custom_text_unfocused_color">@color/grey</item>
        <item name="custom_icon_color">@color/text_white</item>
        <item name="custom_background_tint">@color/DarkPrimary</item>

        <item name="android:textColor">@color/white</item>
        <item name="itemIconTint">@color/white</item>
        <item name="android:itemBackground">@color/dark1</item>
        <item name="itemTextColor">@color/white</item>
        <item name="android:listViewStyle">@style/listViewPrefs</item>
    </style>

    <!--Стиль выпадающего списка-->
    <style name="listViewPrefs" parent="@android:style/Widget.ListView">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:windowBackground">?attr/colorPrimary</item>
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="DetailedTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorBackground">?attr/colorPrimary</item>
    </style>

    <style name="TextViewStyle" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="TextViewAttributes" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">?attr/custom_text_color</item>
    </style>

    <style name="DarkEditTextStyle" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColorHint">?attr/custom_text_color</item>
        <item name="android:textColor">?attr/custom_text_color</item>
    </style>

    <style name="MyCardViewStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="cardCornerRadius">5dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPaddingBottom">10dp</item>
        <item name="contentPaddingTop">10dp</item>
        <item name="contentPaddingLeft">10dp</item>
        <item name="contentPaddingRight">10dp</item>
        <item name="cardBackgroundColor">@color/dark1</item>
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem" />

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem" />

</resources>
